{
  "name": "UV",
  "description": "Instala UV (gerenciador de dependências Python extremamente rápido)",
  "entrypoint": "main.sh",
  "sudo": false,
  "group": "python",
  "os": [
    "linux",
    "mac"
  ],
  "envs": {
    "UV_GITHUB_REPO": "astral-sh/uv",
    "LOCAL_BIN_DIR": "$HOME/.local/bin",
    "UV_DATA_DIR": "$HOME/.local/share/uv",
    "UV_CACHE_DIR": "$HOME/.cache/uv",
    "GITHUB_BASE_URL": "https://github.com",
    "TEMP_DIR": "/tmp"
  }
}
